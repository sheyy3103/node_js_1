<%- include('../../layouts/header') %>
    <div class="container">
        <p class="h1 text-info text-uppercase text-center py-3 font-weight-bold">update "<%= player.name %>" </p>
        <div class="row justify-content-center">
            <div class="col-8">
                <form action="" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="">Player's name: </label>
                        <input type="text" name="name" class="form-control rounded-0" placeholder="name..." value="<%= player.name %> ">
                    </div>
                    <div class="form-group">
                        <label for="">Transfer price: </label>
                        <input type="text" name="price" class="form-control rounded-0" placeholder="price..." value="<%= player.price %> ">
                    </div>
                    <div class="form-group">
                        <label for="">Avatar: </label>
                        <input type="file" name="avatar" class="form-control rounded-0 pl-0 border-0">
                        <img src="/uploads/<%= player.avatar %> " alt="..." height="100px" width="auto">
                    </div>
                    <div class="form-group">
                        <label for="" class="h5">Status:</label>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="status" value="0" <%= !player.status ? 'checked' : '' %> >
                                Free agent
                            </label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="status" value="1" <%= player.status ? 'checked' : '' %>>
                                In contract
                            </label>
                        </div>
                    </div>
                    <div class="form-group pb-2">
                        <label for="">Continent: </label>
                        <select class="form-control custom-select rounded-0" name="continent_id">
                            <% continents.forEach((item) => { %>
                             <option value="<%= item.id %> " <%= item.id == player.continent_id ? 'selected' : '' %>><%= item.name %> </option>
                            <% }) %>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-block btn-outline-info text-uppercase rounded-0">update instantly</button>
                </form>
            </div>
        </div>
    </div>
    <%- include('../../layouts/footer') %>