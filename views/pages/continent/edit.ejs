<%- include('../../layouts/header') %>
    <div class="container">
        <p class="h1 text-center text-uppercase text-info py-3 font-weight-bold">edit "<%= continent.name %> "</p>
        <div class="row justify-content-center">
            <div class="col-8">
                <form action="" method="POST">
                    <div class="form-group">
                        <label for="" class="h5">Name:</label>
                        <input type="text" name="name" class="form-control rounded-0" placeholder="Enter name..." value="<%= continent.name %> ">
                    </div>
                    <div class="form-group">
                        <label for="" class="h5">Status:</label>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="status" value="0" <%= !continent.status ? 'checked' : '' %> >
                                Hidden
                            </label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="status" value="1" <%= continent.status ? 'checked' : '' %>>
                                Display
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-outline-info btn-block rounded-0 text-uppercase">update instantly</button>
                </form>
            </div>
        </div>
    </div>
    <%- include('../../layouts/footer') %>